<div class="jumbotron">
	<%= form_tag welcome_create_url_path, remote: true do %>
		<div class="row">
			<div class="col-md-4 col-md-offset-3">
		  	<%= text_field_tag :url, '', required: true, class: 'form-control', autofocus: true %>
			</div>

		  <%= submit_tag "Shortener", class: "btn btn-large btn-primary" %>
		</div>
		<br>
	  <div class="col-md-4 col-md-offset-3" id="short_url"></div>
	<% end %>
</div>